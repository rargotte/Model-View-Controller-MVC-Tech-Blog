<section class="container">
  <div class="gallery-name">
    <h2>{{post.title}}</h2>
    <h4>{{post.content}}</h4>
    <p>{{post.user.username}}</p>
    <p>{{format_date post.createdAt}}</p>
    <a href="/post/comment/{{post.id}}"> 
      <button id={{post.id}}>Post a comment</button>
    </a>
  </div>
  <section class="flex-row justify-center">
    {{#each post.comments as |comment|}}
    {{> comment-details}}
    {{/each}}
  </section>
</section>