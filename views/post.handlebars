<section class="container">
  <h3 class="gallery-name">{{gallery.name}}</h3>
  <h4>Opening Hour: {{format_time post.starting_date}}</h4>
  <h4>Closing Hour: {{format_time post.ending_date}}</h4>
  <section class="flex-row justify-center">
    {{#each post.comment as |comment|}}
    {{> comment-details}}
    {{/each}}
  </section>
</section>